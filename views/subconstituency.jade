extends layout
block content
  div.container
    div.header
      ul.nav.nav-pills.pull-right
        li.active
          a(href="#") Home
        li
          a(href="#") About
        li
          a(href="#") Contact
      h3.text-muted.text-left 
        a(href="/")
          img(src="../../images/hnec_logo.png")
    ol.breadcrumb
      li
        a(href="/office") Office
        span
      li.active Subconstituency
        

    .panel
        div.btn-group.pull-left
          .col-sm-4.col-md-1
            a.btn.btn-success(href='#addsub', role='button',data-toggle='modal') إضافة دائرة فرعية 
              span.glyphicon.glyphicon-plus 
        .col-sm-4.col-md-6
          .input-group 
              input.form-control(type="text",name="subsearch", placeholder=" أبحث", required="")
              .input-group-btn
                .btn.btn-default(type="button")  
                  spen.glyphicon.glyphicon-search
      .panel-body  
        div.table-responsive  
          table#off.table.table-striped.table-bordered.table-condensed.table-hover
            thead
              th رقم الدائرة الفرعية 
              th اسم الدائرة الفرعية 
              th   عرض 
              th   حدف
            tbody
                    //for office in offices
                tr
                  td 
                  td 
                  td
                    button#viw.btn.btn-primary.btn-xs(value="")
                      span.glyphicon.glyphicon-eye-open
                  td      
                    button#delete.btn.btn-danger.btn-xs(href='#del', data-toggle='modal',value="")
                     span.glyphicon.glyphicon-trash 
        #del.modal.fade(data-width='760',role="dialog",aria-labelledby="myModalLabel", tabindex='-1',aria-hidden="true")
          .modal-dialog
            .modal-content
              .modal-headr.modal-header-danger
                 p.h1 هل أنت متأكد من  حدف ؟
              .modal-body
                p.h2 هل انت متأكد 
                p 
              .modal-footer
                button#subdelete.btn.btn-danger(type='button',data-dismiss='modal') حذف
                button.btn.btn-success(data-dismiss='modal', type='button') إلغاء 
        #addsub.modal.fade(data-width='760',role="dialog",aria-labelledby="myModalLabel", tabindex='-1',aria-hidden="true")
          .modal-dialog
            .modal-content
              .modal-headr.modal-header-success
                button.btn.pull-left.btn-danger(data-dismiss='modal', type='button') إلغاء
                button.close(type="button",data-dismiss="modal",aria-hidden="true")
                h1 إضافة دائرة فرعية  
              .row
                .col-sm-12.col-md-11.col.col-md.offset-4
                    .modal-body
                form#form.form-signin(role="form" , action="#", method="post") 
                          div.form-group
                            lable.h3  أسم الدائرة باللغة العربية    
                            input#subconstituency_name_ar.form-control(type="text",name="office_name_ar", placeholder="أسم القرية ", required="",autofocus="")                            
                          div.form-group
                            lable.h3  أسم الدائرة الفرعية باللغة الأنجليزية   
                            input#subconstituency_name.form-control(type="text",name="office_name_ar", placeholder="أسم القرية ", required="",autofocus="")                                                       
                          div.form-group
                            lable.h3  رقم الدائرة الأنتخابية    
                            input#subconstituency_id.form-control(type="text",name="office_name_ar", placeholder="أسم القرية ", required="",autofocus="")                         
                           div.form-group
                            lable.h3 الدائرة الفرعية التابعة لها 
                            select#office_idoffice.form-control(type="text",name="region_name", placeholder=" الدائرة الفرعية ", required="",autofocus="")
                              option(value="") طرابلس   
                              option(value="") بنغازي   
                              option(value="") الجبل   
                          div.form-group.text-center
                            button.btn.btn-lg.btn-primary(type="submit") إضـافة       
  script(src="/javascripts/jquery-1.11.1.min.js")
  script(src="/javascripts/bootstrap.min.js")
