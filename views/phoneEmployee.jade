extends layout
block content
  div.container
    div.header
      ul.nav.nav-pills.pull-right
        li.active
          a(href="/cpanel") لـوحـــة الـتـحــكــم 
        li
          //a(href="#") About
        li
          //a(href="#") Contact
      h3.text-muted.text-left 
        a(href="/")
          img(src="../images/hnec_logo.png")
      .panel
        .col-sm-4.col-md-6
          .input-group 
            input.form-control(type="text",name="constitres", placeholder=" أبحث", required="")
            .input-group-btn
              .btn.btn-default(type="button")  
                spen.glyphicon.glyphicon-search
      .panel-body  
        div.table-responsive  
          table#off.table.table-striped.table-bordered.table-condensed.table-hover
            thead
              th اﻻسم
              th النوع
              th رقم الهاتف
              th عرض
            tbody
              for employee in employees
                tr
                  td #{employee.name}
                  td #{employee.type}
                  td
                    a#phone(href='#phonee', data-toggle='modal',data-value="#{employee.iduser}")
                      |  #{employee.phone_number}
                  td 
                    button#viw.btn.btn-primary.btn-xs(   data-title='Edit',value="#{employee.iduser}")
                      span.glyphicon.glyphicon-eye-open
           div.text-center
            ul.pagination
              li(class='#{pagination.previous.disabled}')
                a(href='?p=#{pagination.previous.n}') السابق
              for page in pagination.pages
                li(class="#{page.active}")
                  a(href='?p=#{page.n}') #{page.n}
              li(class="#{pagination.next.disabled}")
                a(href='?p=#{pagination.next.n}') التالي
  #phonee.modal.fade(data-width='760',role="dialog",aria-labelledby="myModalLabel", tabindex='-1',aria-hidden="true")
    .modal-dialog
      .modal-content
        .modal-headr.modal-header-success
           p.h1 ارقام الهاتف
        .modal-body
          div.panel-body  
            div.table-responsive  
              table#off.table.table-striped.table-bordered.table-condensed.table-hover
                thead
                  th رقم الهاتف
                  th النوع
                tbody#body
        .modal-footer
          button.btn.btn-success(data-dismiss='modal', type='button') cancel
  script(src="/javascripts/jquery-1.11.1.min.js")
  script(src="/javascripts/bootstrap.min.js")
  script(src="/javascripts/phoneManager.js")
