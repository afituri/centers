extends layout
block content
  div.container
    div.header
      ul.nav.nav-pills.pull-right
        li.active
          a(href="#") Home
        li
          a(href="#") About
        li
          a(href="#") Contact
      h3.text-muted.text-left Centers
  div.container 
    button#enable.btn.btn-default تمكين / تعطيل
    button#delete.btn.btn-danger.btn-xs.pull-left(href='#del', data-toggle='modal',value="#")
      span.glyphicon.glyphicon-trash 
    div.form-group 
      table#user.table.table-bordered.table-striped(style='clear: both')
        tbody
          div.form-group
            tr
              td(width='35%') 
                font( size="5")
                  اسم المركز
              td(width='65%')
                font( size="5")
                  a#name(href='#', data-type='text', data-pk='#{center[0].idcenter}', data-title='اسم المركز' data-value='#{center[0].name}')  #{center[0].name}
            tr
              td(width='35%')
                font( size="5")
                  رقم المركز
              td(width='65%')
                font( size="5")
                  a#center_id(href='#', data-type='text', data-pk='#{center[0].idcenter}', data-title='رقم المركز', data-value='#{center[0].center_id}')  #{center[0].center_id}
            tr
              td(width='35%')
                font( size="5")
                  الدوائر الرئيسيه
              td(width='65%')
                font( size="5")
                  a#constituency(href='#', data-type='text', data-pk='#{center[0].idcenter}', data-title='الدوائر الرئيسيه', data-value='#{center[0].center_id}')  #{center[0].center_id}
            tr
              td(width='35%')
                font( size="5")
                  الدائره الفرعيه
              td(width='65%')
                font( size="5")
                  a#subconstituency(href='#', data-type='text', data-pk='#{center[0].idcenter}', data-title='الدائره الفرعيه', data-value='#{center[0].center_id}')  #{center[0].center_id}
            tr
              td(width='35%')
                font( size="5")
                  المدينه/القريه
              td(width='65%')
                font( size="5")
                  a#village(href='#', data-type='text', data-pk='#{center[0].idcenter}', data-title='المدينه/القريه', data-value='#{center[0].center_id}')  #{center[0].center_id}
            tr
              td(width='35%')
                font( size="5")
                  المحله
              td(width='65%')
                font( size="5")
                  a#mahalla(href='#', data-type='text', data-pk='#{center[0].idcenter}', data-title='المحله', data-value='#{center[0].center_id}')  #{center[0].center_id}


  #del.modal(data-width='760', tabindex='-1')
    .modal-dialog
      .modal-content
        .modal-headr
          .modal-title 
        .modal-body
           p هل انت متأكد 
        .modal-footer
          button#confdelete.btn.btn-danger(type='button',data-dismiss='modal') delete
          button.btn.btn-success(data-dismiss='modal', type='button') cancel 
  
   
  div.container    
    div.panel.panel-default
      div.panel-heading
        div.btn-group
          h3.panel-title.text-right.active   الموظفين
        div.btn-group.pull-left
          a.btn.btn-success.btn-xs(href='/offices/addemployee', role='button') إضافة موظف
            span.glyphicon.glyphicon-plus 
      div.panel-body
        div.table-responsive  
          table#admin.table.table-bordred.table-striped
            thead
              th الاسم
              th رقم الهاتف
              th البريد الإلكتروني
              th تعديل
              th الغاء 
            tbody
              tr
                td  aaaaaaa
                td  bbbbbbb
                td  ccccccc
                td
                    button#view.btn.btn-primary.btn-xs(data-title='Edit', data-toggle='modal',value="#", data-target='#edit', data-placement='top', rel='tooltip')
                      span.glyphicon.glyphicon-eye-open
                td      
                    button#delete.btn.btn-danger.btn-xs(href='#del', data-toggle='modal',value="#")
                      span.glyphicon.glyphicon-trash 
              tr
                td  fffffff
                td  ggggggg
                td  hhhhhhh
                td
                    button#view.btn.btn-primary.btn-xs(data-title='Edit', data-toggle='modal',value="#", data-target='#edit', data-placement='top', rel='tooltip')
                      span.glyphicon.glyphicon-eye-open
                td      
                    button#delete.btn.btn-danger.btn-xs(href='#del', data-toggle='modal',value="#")
                      span.glyphicon.glyphicon-trash 
              tr
                td  ttttttt
                td  yyyyyyy
                td  uuuuuuu
                td
                    button#view.btn.btn-primary.btn-xs(data-title='Edit', data-toggle='modal',value="#", data-target='#edit', data-placement='top', rel='tooltip')
                      span.glyphicon.glyphicon-eye-open
                td      
                    button#delete.btn.btn-danger.btn-xs(href='#del', data-toggle='modal',value="#")
                      span.glyphicon.glyphicon-trash 
  
  #del.modal(data-width='760', tabindex='-1')
    .modal-dialog
      .modal-content
        .modal-headr
          .modal-title
        .modal-body
          p هل انت متأكد 
        .modal-footer
          button#confdelete.btn.btn-danger(type='button',data-dismiss='modal') delete
          button.btn.btn-success(data-dismiss='modal', type='button') cancel


