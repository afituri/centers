extends layout
block content
  div.container
    div.header
      ul.nav.nav-pills.pull-right
        li.active
          a(href="#") Home
        li
          a(href="#") About
        li
          a(href="#") Contact
      h3.text-muted.text-left 
        a(href="/")
          img(src="../../../../images/hnec_logo.png")
    .panel
        div.btn-group.pull-left
          .col-sm-4.col-md-1
            a.btn.btn-success(href='#addcenter', role='button',data-toggle='modal') إضافة مركز
              span.glyphicon.glyphicon-plus 
        .col-sm-4.col-md-6
          .input-group 
              input.form-control(type="text",name="constitres", placeholder=" أبحث", required="")
              .input-group-btn
                .btn.btn-default(type="button")  
                  spen.glyphicon.glyphicon-search
      .panel-body  
        div.table-responsive  
          table#off.table.table-striped.table-bordered.table-condensed.table-hover
            thead
              th رقم المركز 
              th اسم المركز
              th  نوع المركز
              th  اللجنة الأنتخابية
              th   عرض 
              th   حدف
            tbody
                    //for office in offices
                tr
                  td
                  td 
                  td 
                  td
                  td
                    button#viw.btn.btn-primary.btn-xs(value="")
                      span.glyphicon.glyphicon-eye-open
                  td      
                    button#delete.btn.btn-danger.btn-xs(href='#del', data-toggle='modal',value="")
                     span.glyphicon.glyphicon-trash 
        #del.modal.fade(data-width='760',role="dialog",aria-labelledby="myModalLabel", tabindex='-1',aria-hidden="true")
          .modal-dialog
            .modal-content
              .modal-headr.modal-header-danger
                 p.h1 هل أنت متأكد من  حدف ؟
              .modal-body
                p.h2 هل انت متأكد 
                p 
              .modal-footer
                button#offdelete.btn.btn-danger(type='button',data-dismiss='modal') حذف
                button.btn.btn-success(data-dismiss='modal', type='button') إلغاء 
        #addcenter.modal.fade(data-width='760',role="dialog",aria-labelledby="myModalLabel", tabindex='-1',aria-hidden="true")
          .modal-dialog
            .modal-content
              .modal-headr.modal-header-success
                button.btn.pull-left.btn-danger(data-dismiss='modal', type='button') إلغاء
                button.close(type="button",data-dismiss="modal",aria-hidden="true")
                h1 إضافة مركز  
              .row
                .col-sm-12.col-md-11.col.col-md.offset-4
                    .modal-body
                        form#form.form-signin(role="form" , action="#", method="post") 
                          div.form-group
                            lable.h3 رقم المركز  
                            input#center_id.form-control(type="text",name="center_id", placeholder="رقم المركز ", required="",autofocus="")                            
                          div.form-group
                            lable.h3 أسم المركز
                            input#name.form-control(type="text",name="name", placeholder="اسم المركز", required="",autofocus="")
                          div.form-group
                            lable.h3 الدائرة الرئيسية  
                            select#constituency_idconstituency.form-control(type="text",name="constituency_idconstituency", placeholder="رقم اللجنة", required="",autofocus="")
                              option(value="") الاولى  
                              option(value="") الثانية  
                              option(value="") الثالثة   
                          div.form-group
                            lable.h3  اللجنة التابعة لها  
                            select#office_idoffice.form-control(type="text",name="office_idoffice", placeholder="رقم اللجنة", required="",autofocus="")
                              option(value="-1", selected="selected") اللجان الانتخابية
                              for office in offices
                                option(value=office.idoffice) #{office.office_name}
                          div.form-group
                            lable.h3 الدائرة الفرعية لها  
                            select#subconstituency_idsubconstituency.form-control(type="text",name="subconstituency_idsubconstituency", placeholder="رقم اللجنة", required="",autofocus="") 
                          div.form-group
                            lable.h3 القرية 
                            select#village_idvillage.form-control(type="text",name="village_idvillage", placeholder="رقم اللجنة", required="",autofocus="")  
                          div.form-group
                            lable.h3 المحلة  
                            select#mahalla_idmahalla.form-control(type="text",name="mahalla_idmahalla", placeholder="رقم اللجنة", required="",autofocus="")
                              option(value="") قرقارش 
                              option(value="") حي الاندلس  
                              option(value="") غوط الشعال  
                          div.form-group
                            lable.h3 نوع المركز  
                            select#center_type.form-control(type="text",name="center_type", placeholder="رقم اللجنة", required="",autofocus="")
                              option(value="") نفط   
                              option(value="") عام  
                              option(value="") مركز معاقين 

                          div.form-group.text-center
                            button.btn.btn-lg.btn-primary(type="submit") إضـافة      
  script(src="/javascripts/jquery-1.11.1.min.js") 
  script(src="/javascripts/bootstrap.min.js")
  script(src="/javascripts/office.js") 
  script(src="/javascripts/center.js")