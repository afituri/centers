extends layout
block content
  div.container
    div.header
      ul.nav.nav-pills.pull-right
        li.active
          a(href="#") Home
        li
          a(href="#") About
        li
          a(href="#") Contact
      h3.text-muted Centers 
  div.container    
    div.panel.panel-default
      div.panel-heading
        div.btn-group
          h3.panel-title.text-right.active   اللجان الأنتخابية
        div.btn-group.pull-left
          a.btn.btn-success.btn-xs(href='/constits/addconstit', role='button')  إضافة لجنة 
            span.glyphicon.glyphicon-plus 
      div.panel-body
          div.table-responsive  
            table#user.table.table-bordred.table-striped
              thead
                th الرقم 
                th اللجنة الأنتخابية
                th المسـؤل عن اللجنة 
                th
                th
              tbody
                tr(data-id=1)
                  td 1
                  td مطرابلس 
                  td  محمد عبد السلام 
                  td
                    p
                      button.btn.btn-primary.btn-xs(data-title='Edit', data-toggle='modal', data-target='#edit', data-placement='top', rel='tooltip')
                        span.glyphicon.glyphicon-pencil
                  td      
                    p
                      button.btn.btn-danger.btn-xs(data-title='Delete', data-toggle='modal', href='#del', data-placement='top', rel='tooltip')
                        span.glyphicon.glyphicon-trash
        div.modal.hide.fade(id='del')
          div.modal-header
            button.close(type='button',data-dismiss='modal')
            h3 button
          div.modal-body
            div(id='create-word')
            label welcome
          div.modal-footer
            a.btn.btn-primary(href="#",data-dismiss='modal',id='add-word') add word

script(src="/javascripts/jquery-1.11.1.min.js")
script(src="/javascripts/bootstrap.min.js")
script(src="/javascripts/constits.js") 