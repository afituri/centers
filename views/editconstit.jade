extends layout
block content
  div.container
    div.header
      ul.nav.nav-pills.pull-right
        li.active
          a(href="#") Home
        li
          a(href="#") About
        li
          a(href="#") Contact
      h3.text-muted Centers 
    div.panel.panel-default
      div.panel-heading
        div.btn-group
          h3.panel-title.text-right.active   اللجان الأنتخابية
        div.btn-group.pull-left
          a.btn.btn-success.btn-xs(href='/constits/addconstit', role='button')  إضافة لجنة 
            span.glyphicon.glyphicon-plus 
      div.panel-body
          div.table-responsive  
            table#user.table.table-bordred.table-striped
              thead
                th الرقم 
                th اللجنة الأنتخابية
                th المسـؤل عن اللجنة 
                th
                th
              tbody
                tr(data-id=1)
                  td 1
                  td مطرابلس 
                  td  محمد عبد السلام 
                  td
                    p
                      button.btn.btn-primary.btn-xs(href='#edit', data-toggle='modal')
                        span.glyphicon.glyphicon-pencil
                  td      
                    p
                      button.btn.btn-danger.btn-xs(href='#del', data-toggle='modal')
                       span.glyphicon.glyphicon-trash
    #del.modal(data-width='760', tabindex='-1')
      .modal-dialog
        .modal-content
          .modal-headr
            .modal-title 
              h2 هل أنت متأكد من حدف؟
          .modal-body
             p هل انت متأكد 
          .modal-footer
            button.btn.btn-danger(type='button',data-dismiss='modal') delete
            button.btn.btn-success(data-dismiss='modal', type='button') cancel
        ////  modal edit
    #edit.modal(data-width='760', tabindex='-1')
      .modal-dialog
        .modal-content
          .modal-headr
            .modal-title 
              h2 تعديل لجنة 
          .modal-body
             p اللجنة المراد تعديلها
          .modal-footer
            button.btn.btn-primary(type='button',data-dismiss='modal') save and close 
            button.btn.btn-success(data-dismiss='modal', type='button') cancel
  script(src="/javascripts/jquery-1.11.1.min.js")
  script(src="/javascripts/bootstrap.min.js")
  script(src="/javascripts/constits.js") 