extends layout
block content
  div.container
    div.header
      ul.nav.nav-pills.pull-right
        li.active
          a(href="#") Home
        li
          a(href="#") About
        li
          a(href="#") Contact
      h3.text-muted.text-left 
        a(href="/")
          img(src="/../../images/hnec_logo.png")  
    .row
        .panel.col-sm-3
          .nav.nav-pills.nav-stacked
            li.active
              a(href="#") 
                span.glyphicon.glyphicon-home اللجان الأنتخابية 
        .col-md-9 
          .panel.col-md-6
            .input-group 
              input.form-control(type="text",name="constitres", placeholder=" أبحث", required="")
              .input-group-btn
                .btn.btn-default(type="button")  
                  spen.glyphicon.glyphicon-search
          div.table-responsive  
          table#off.table.table-striped.table-bordered.table-condensed.table-hover
            thead
              th  رقم المركز 
              th  اسم المركز
              th   نوع المركز 
            tbody
              for center in centers
                tr
                  td #{center.center_id}
                  td #{center.name}
                  td #{center.center_type}
                  td 
                    button#view.btn.btn-primary.btn-xs(href='/center/#{center.center_id}', data-toggle='modal',value="#{center.center_id}")
                      span.glyphicon.glyphicon-eye-open 
  script(src="/javascripts/jquery-1.11.1.min.js")
  script(src="/javascripts/bootstrap.min.js")
  script(src="/javascripts/office.js")