extends layout
block content
  div.container
    div.header
      ul.nav.nav-pills.pull-right
        li.active
          a(href="#") Home
        li
          a(href="#") About
        li
          a(href="#") Contact
      h3.text-muted.text-left 
        a(href="/")
          img(src="../../../../images/hnec_logo.png")
    ol.breadcrumb
      li
        a(href="/office") Office
        span
      li
        a(href="/office/subconstituency") Subconstituency
        span
      li 
        a(href="/office/subconstituency/Village") Village
        span
      li.active Mahalla
        
    .panel
        div.btn-group.pull-left
          .col-sm-4.col-md-1
            a.btn.btn-success(href='#addmahalla', role='button',data-toggle='modal') إضافة محلة
              span.glyphicon.glyphicon-plus 
        .col-sm-4.col-md-6
          .input-group 
              input.form-control(type="text",name="constitres", placeholder=" أبحث", required="")
              .input-group-btn
                .btn.btn-default(type="button")  
                  spen.glyphicon.glyphicon-search
      .panel-body  
        div.table-responsive  
          table#off.table.table-striped.table-bordered.table-condensed.table-hover
            thead
              th أسم المحلة 
              th أسم القرية  
              th   عرض 
              th   حدف
            tbody
                    //for office in offices
                tr
                  td
                  td 
                  td  
                    button#viw.btn.btn-primary.btn-xs(value="")
                      span.glyphicon.glyphicon-eye-open
                  td      
                    button#delete.btn.btn-danger.btn-xs(href='#del', data-toggle='modal',value="")
                     span.glyphicon.glyphicon-trash 
        #del.modal.fade(data-width='760',role="dialog",aria-labelledby="myModalLabel", tabindex='-1',aria-hidden="true")
          .modal-dialog
            .modal-content
              .modal-headr.modal-header-danger
                 p.h1 هل أنت متأكد من  حدف ؟
              .modal-body
                p.h2 هل انت متأكد 
                p 
              .modal-footer
                button#offdelete.btn.btn-danger(type='button',data-dismiss='modal') حذف
                button.btn.btn-success(data-dismiss='modal', type='button') إلغاء 
        #addmahalla.modal.fade(data-width='760',role="dialog",aria-labelledby="myModalLabel", tabindex='-1',aria-hidden="true")
          .modal-dialog
            .modal-content
              .modal-headr.modal-header-success
                button.btn.pull-left.btn-danger(data-dismiss='modal', type='button') إلغاء
                button.close(type="button",data-dismiss="modal",aria-hidden="true")
                h1 إضافة محلة  
              .row
                .col-sm-12.col-md-11.col.col-md.offset-4
                    .modal-body
                        form#form.form-signin(role="form" , action="#", method="post") 
                          div.form-group
                            lable.h3  أسم المحلة   
                            input#mahalla_name.form-control(type="text",name="office_name_ar", placeholder="أسم المحلة ", required="",autofocus="")                            
                           div.form-group
                            lable.h3 القرية التابعة لها  
                            select#village_idvillage.form-control(type="text",name="region_name", placeholder="رقم اللجنة", required="",autofocus="")
                              option(value="") طرابلس  
                              option(value="") سوق الجمعة  
                              option(value="") ورشفانة  
                          div.form-group.text-center
                            button.btn.btn-lg.btn-primary(type="submit") إضـافة      
  script(src="/javascripts/jquery-1.11.1.min.js")
  script(src="/javascripts/bootstrap.min.js")
