extends layout
block content
  div.container
    div.header
      ul.nav.nav-pills.pull-right
        li.active
          a(href="#") Homerfrg
        li
          a(href="#") About
        li
          a(href="#") Contact
      h3.text-muted.text-left 
        a(href="/")
          img(src="../images/hnec_logo.png")
      .panel
        .col-sm-4.col-md-6
          .input-group 
            input.form-control(type="text",name="constitres", placeholder=" أبحث", required="")
            .input-group-btn
              .btn.btn-default(type="button")  
                spen.glyphicon.glyphicon-search
        a.btn.btn-primary.pull-left(type="button", href="/cpanel") رجـــــوع
      .panel-body  
        div.table-responsive  
          table#off.table.table-striped.table-bordered.table-condensed.table-hover
            thead
              th الرقم
              th اﻻسم باللغة العربيه
              th اﻻسم باللغة اﻻنجليزيه
              th اسم المنطقة
            tbody
              for office in offices
                tr
                  td #{office.office_id}
                  td #{office.office_name_ar}
                  td #{office.office_name}
                  td #{office.region_name}
      div.text-center
            ul.pagination
              li(class='#{pagination.previous.disabled}')
                a(href='?p=#{pagination.previous.n}') السابق
              for page in pagination.pages
                li(class="#{page.active}")
                  a(href='?p=#{page.n}') #{page.n}
              li(class="#{pagination.next.disabled}")
                a(href='?p=#{pagination.next.n}') التالي 
  script(src="/javascripts/jquery-1.11.1.min.js")
  script(src="/javascripts/bootstrap.min.js")