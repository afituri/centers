extends layout
block content
  div.container
    div.header
      ul.nav.nav-pills.pull-right
        li.active
          a(href="#") Home
        li
          a(href="#") About
        li
          a(href="#") Contact
      h3.text-muted Centers 
  div.container    
    div.panel.panel-default
      div.panel-heading
        div.btn-group
          h3.panel-title.text-right.active المستخدمين  
        div.btn-group.pull-left
          a.btn.btn-success.btn-xs(href='/root/adduser', role='button') إضافة مستخدم
            span.glyphicon.glyphicon-plus 
      div.panel-body
          div.table-responsive  
            table#user.table.table-bordred.table-striped
              thead
                th الاسم
                th رقم الهاتف
                th الصلحيات
                th عرض
                th الغاء 
              tbody
              for user in users
                tr

                  td= user.name
                  td= user.phone
                  td
                    case user.level
                      when 0
                        p root
                      when 1
                        p admin
                      when 2
                        p manager
                  td
                    button#viw.btn.btn-primary.btn-xs(data-title='Edit', data-toggle='modal',value="#{user.iduser}", data-target='#edit', data-placement='top', rel='tooltip')
                      span.glyphicon.glyphicon-eye-open
                  td      
                    button#delete.btn.btn-danger.btn-xs(href='#del', data-toggle='modal',value="#{user.iduser}")
                       span.glyphicon.glyphicon-trash 
  #del.modal(data-width='760', tabindex='-1')
    .modal-dialog
      .modal-content
        .modal-headr
          .modal-title 
        .modal-body
           p هل انت متأكد 
        .modal-footer
          button#confdelete.btn.btn-danger(type='button',data-dismiss='modal') delete
          button.btn.btn-success(data-dismiss='modal', type='button') cancel
  script(src="/javascripts/jquery-1.11.1.min.js")
  script(src="/javascripts/bootstrap.min.js")
  script(src="/javascripts/root.js")