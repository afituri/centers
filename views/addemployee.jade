extends layout
block content
  div.container
    div.header
      ul.nav.nav-pills.pull-right
        li.active
          a(href="#") Home
        li
          a(href="#") About
        li
          a(href="#") Contact
      h3.text-muted.text-left Centers App
    div.panel.panel-default.form-signin 
      div.panel-heading.text-right
        h1.panel-title اضافة موظف
      div.panel-body
        form#form.form-signin(role="form" , action="/admin/addmanager", method="post")
          div.form-group
            lable اسم الموظف
            input#name.form-control(type="text",name="name", placeholder="اسم الموظف", required="",autofocus="")
          div.form-group
            lable رقم الهاتف
            input#phone.form-control(type="text",name="phone", placeholder="رقم الهاتف", required="",autofocus="")
          div.form-group
            lable البريد الإلكتروني
            input#email.form-control.text-left(type="email",name="email",dir="ltr", placeholder="البريد الالكتروني", required="")
          div.form-group
            lable مراكز الاقتراع
            font(size="4", color="black" , face="cursive" )
              select.form-control#constit(name="constit")
                option(value="-1", selected="selected") مراكز الاقتراع
                  option(value=1) fffffffffffffff
                  option(value=2) fثثثثثثثثثثثثثث
                  option(value=3) يييييييييييييي
                
          div.form-group.text-center
            button.btn.btn-lg.btn-primary(type="submit") تسجيل
    
  script(src="/javascripts/bootstrap.min.js")
  script(src="/javascripts/jquery-1.11.1.min.js") 
  script(src="/javascripts/jquery.validate.min.js")
  script(src="/javascripts/addmanager.js")
