extends layout
block content
  div.container
    div.header
      ul.nav.nav-pills.pull-right
        li.active
          a(href="/cpanel") لـوحـــة الـتـحــكــم 
        li
          //a(href="#") About
        li
          //a(href="#") Contact
      h3.text-muted.text-left 
        a(href="/")
          img(src="../images/hnec_logo.png")
    a.btn.btn-primary.pull-left(type="button", href="/admin") رجـــــوع
    div.panel.panel-default.form-signin 
      div.panel-heading.text-right
        h1.panel-title اضافة مدير
      div.panel-body
        form#form.form-signin(role="form" , action="/admin/addmanager", method="post")
          div.form-group
            lable اسم المدير
            input#name.form-control(type="text",name="name", placeholder="اسم المدير", required="",autofocus="")
          div.form-group
            lable رقم الهاتف
            .form-group.multiple-form-group.input-group#phone_input
              .input-group-btn.input-group-select
                button.btn.btn-default.dropdown-toggle(data-toggle='dropdown', type='button')
                  span.concept Phone
                  span.caret
                ul.dropdown-phone(role='menu')
                  li
                    a(href='#ليبيانا') ليبيانا
                  li
                    a(href='#المدار') المدار
                  li
                    a(href='#ثريا') ثريا
                  li
                input.input-group-select-val(type='hidden', value='phone', name='phone_type[]')
              input#phone.form-control(type='text', name='phone[]',placeholder="رقم الهاتف")
              span.input-group-btn
                button.btn.btn-success.btn-add(type='button') +
          div.form-group
            lable البريد الإلكتروني
            input#email.form-control.text-left(type="email",name="email",dir="ltr", placeholder="البريد الالكتروني", required="")
          input.form-control(type="hidden",name="level",value="2") 
          div.form-group
            lable اللجان الانتخابية
            font(size="4", color="black" , face="cursive" )
              select.form-control#office_idoffice(name="office_idoffice")
                option(value="-1", selected="selected") اللجان الانتخابية
                for office in offices
                  option(value=office.idoffice) #{office.office_name_ar}
          div.form-group.text-center
            button.btn.btn-lg.btn-primary(type="submit") تسجيل
  script(src="/javascripts/jquery-1.11.1.min.js") 
  script(src="/javascripts/bootstrap.min.js")
  script(src="/javascripts/jquery.validate.min.js")
  script(src="/javascripts/addmanager.js")
  script(src="/javascripts/phone.js") 